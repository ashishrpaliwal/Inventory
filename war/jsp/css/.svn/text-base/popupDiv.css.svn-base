.overlay
{
    position: absolute;
    top: 0;
    left:0;
	width: 100%;
	height: 100%;
    background: #000;
    display: none;   
    opacity: .5;
    filter: alpha(opacity=50);
	-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";
	
}
.popup
{
    position: absolute;
	border: 5px solid skyblue;
	padding: 10px;
	background-color: #ccc;
    top: 50%;
    left: 50%;
    margin-left: -150px;
    margin-top: -100px;
    width: 400px;
    height: 250px;
    display: none;
    background: white;
}